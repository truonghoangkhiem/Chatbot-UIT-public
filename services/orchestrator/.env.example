# Environment variables for orchestrator service

# OpenRouter Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=openai/gpt-4o-mini
OPENROUTER_TIMEOUT=30
OPENROUTER_MAX_RETRIES=3

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password_here
NEO4J_DATABASE=neo4j

# RAG Service Configuration
RAG_SERVICE_URL=http://localhost:8000
RAG_SERVICE_TIMEOUT=30
RAG_SERVICE_MAX_RETRIES=3

# Default System Prompt (optional)
DEFAULT_SYSTEM_PROMPT=Bạn là một trợ lý AI thông minh và hữu ích cho Chatbot-UIT. Hãy trả lời câu hỏi một cách chính xác và hữu ích bằng tiếng Việt.

# Server Configuration
HOST=0.0.0.0
PORT=8002

# Logging
LOG_LEVEL=INFO